# ZULU MPC Agent - Environment Variables
# Copy this file to .env and fill in your values

# Database Encryption Key (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
ZULU_DB_KEY=your-64-character-hex-key-here

# Nillion Configuration (Optional)
NILLION_API_KEY=your-nillion-api-key
NILLION_CLUSTER_ID=your-cluster-id

# HuggingFace Token (Optional - for pyannote diarization)
HF_TOKEN=your-huggingface-token

# Ollama Configuration (Optional overrides)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Logging
LOG_LEVEL=INFO

# Development
DEBUG=false
