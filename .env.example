# =============================================================================
# ZULU ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control

# -----------------------------------------------------------------------------
# Telegram Bot
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ALLOWED_USERS=your-telegram-user-id

# -----------------------------------------------------------------------------
# LLM Provider
# -----------------------------------------------------------------------------
# Provider selection: anthropic, ollama, openai, groq, gemini
ZULU_LLM_PROVIDER=anthropic

# Anthropic (default)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (optional)
OPENAI_API_KEY=sk-...

# Groq (optional)
GROQ_API_KEY=gsk_...

# Gemini (optional)
GEMINI_API_KEY=...

# Ollama (optional, for local inference)
OLLAMA_BASE_URL=http://localhost:11434

# -----------------------------------------------------------------------------
# Per-role model selection (optional)
# -----------------------------------------------------------------------------
# ZULU_INTENT_MODEL=claude-haiku-4-5-20251001
# ZULU_PLANNING_MODEL=claude-sonnet-4-5-20250929
# ZULU_EXTRACTION_MODEL=claude-haiku-4-5-20251001

# -----------------------------------------------------------------------------
# Execution credentials (optional, separate billing)
# -----------------------------------------------------------------------------
# ZULU_EXECUTION_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# Rate limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=10

# -----------------------------------------------------------------------------
# Clawd Runner
# -----------------------------------------------------------------------------
CLAWD_URL=http://localhost:8080
